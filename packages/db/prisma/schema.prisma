generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  CUSTOMER
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  phone     String?
  role      UserRole  @default(CUSTOMER)
  name      String?
  createdAt DateTime  @default(now())

  userTemplates UserTemplate[]
}

model Template {
  id        Int      @id @default(autoincrement())
  name      String
  price     Int
  fullPrice Int

  userTemplates UserTemplate[]
}

model UserTemplate {
  id String @id @default(cuid())

  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  templateId Int
  template   Template @relation(fields: [templateId], references: [id])
  
  price      Int      
  quantity   Int      @default(1)
  customData Json
  numberOfGuestsSeen Int @default(0)
  isActive  Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reservations Reservation[]
  userTemplateImages UserTemplateImages[]
}

model UserTemplateImages {
  id             Int          @id @default(autoincrement())

  userTemplateId String
  userTemplate   UserTemplate @relation(fields: [userTemplateId], references: [id])

  url            String
}

model Reservation {
  id         Int      @id @default(autoincrement())

  userTemplateId String
  userTemplate   UserTemplate    @relation(fields: [userTemplateId], references: [id])

  date       DateTime
  note       String?
  totalGuests Int    @default(1)
  isAttending    Boolean     @default(true)

  guests     Guest[]
}

model Guest {
  id             Int         @id @default(autoincrement())

  reservationId  Int
  reservation    Reservation @relation(fields: [reservationId], references: [id])

  firstName      String
  lastName       String
}
